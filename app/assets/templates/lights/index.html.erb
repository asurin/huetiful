<h1>Lights</h1>
<table class="table table-striped">
  <thead>
    <tr>
        <th>Name</th>
        <th>On</th>
        <th>Brightness</th>
        <th>Hue</th>
        <th>Saturation</th>
        <th>X</th>
        <th>Y</th>
        <th>Ct</th>
        <th>Alert</th>
        <th>Effect</th>
        <th>Color mode</th>
        <th>Reachable</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <tr ng-repeat="light in lights">
      <td>
        <a href="/lights/{{light.id}}">
          {{light.name}}
        </a>
      </td>
        <td>
          {{light.on}}
        </td>
        <td>
          {{light.brightness}}
        </td>
        <td>
          {{light.hue}}
        </td>
        <td>
          {{light.saturation}}
        </td>
        <td>
          {{light.x}}
        </td>
        <td>
          {{light.y}}
        </td>
        <td>
          {{light.ct}}
        </td>
        <td>
          {{light.alert}}
        </td>
        <td>
          {{light.effect}}
        </td>
        <td>
          {{light.color_mode}}
        </td>
        <td>
          {{light.reachable}}
        </td>
      <td>
        <a href="/lights/{{light.id}}/edit"
          class="btn btn-primary"><i class="icon-edit"></i>
          Edit
        </a>
        <button ng-click="destroy()" class="btn btn-danger">
          <i class="icon-trash"></i> Delete
        </button>
      </td>
    </tr>
  </tbody>
</table>

<p>
  <a href='/lights/new' class="btn btn-primary">
    <i class="icon-plus"></i>New
  </a>
</p>
